pipeline { 
    agent any  
	tools {
        maven 'MAVEN_HOME'
        jdk 'JAVA_HOME'
    }
    stages { 
        stage('Build') { 
            steps { 
               echo 'This is a minimal pipeline.' 
			   withMaven(maven : 'maven_3.6.0') {
                    sh 'mvn clean compile'
                }
            }
        }
		stage('QA') { 
            steps { 
               echo 'This is a minimal pipeline QA' 
			   withMaven(maven : 'maven_3.6.0') {
                    sh 'mvn test'
                }
            }
        }
		stage('DEploy') { 
            steps { 
               echo 'This is a minimal pipeline QA' 
			   withMaven(maven : 'Maven_3.6.0') {
                    sh 'mvn deploy'
                }
            }
        }
    }
}